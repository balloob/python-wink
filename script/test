#!/bin/sh

# script/test: Run test suite for application. Optionallly pass in a path to an
#              individual test file to run a single test.

cd "$(dirname "$0")/.."

script/lint

LINT_STATUS=$?

echo "Running tests..."

py.test --cov=src
TEST_STATUS=$?

if [ $LINT_STATUS -eq 0 ]
then
  exit $TEST_STATUS
else
  exit $LINT_STATUS
fi

rm -r .pytest_cache
